<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_splash_background"
    android:gravity="center"
    tools:context=".activities.SplashActivity"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/app_name"
        android:textSize="@dimen/splash_screen_title_text_size"
        android:textColor="@color/splash_screen_text_color"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/tv_app_name_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/app_name_description"
        android:textSize="@dimen/splash_screen_title_text_description_size"
        android:textColor="@color/splash_screen_text_color"
        />

</LinearLayout>